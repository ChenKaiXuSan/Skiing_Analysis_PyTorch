{
  "configurations": [
    {
      "name": "Python 调试程序: 当前文件",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "prepare_dataset",
      "type": "debugpy",
      "request": "launch",
      "module": "prepare_dataset.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
        "device=1",
        "task=[depth, optical_flow, yolo, detectron2]",
      ]
    },
    {
      "name": "video_pose3d",
      "type": "debugpy",
      "request": "launch",
      "module": "VideoPose3D.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "camera_calibration",
      "type": "debugpy",
      "request": "launch",
      "module": "camera_calibration.calibration",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "triangulate",
      "type": "debugpy",
      "request": "launch",
      "module": "triangulation.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "vggt",
      "type": "debugpy",
      "request": "launch",
      "module": "vggt.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
        "runtime.run_multi_view=true",
        "runtime.debug=true",
        "infer.gpu=0",
      ]
    },
    {
      "name": "image_edit run",
      "type": "debugpy",
      "request": "launch",
      "module": "image_edit.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
      ]
    },
    {
      "name": "bundle_adjustment",
      "type": "debugpy",
      "request": "launch",
      "module": "bundle_adjustment.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
      ]
    },
    {
      "name": "sam3d_body run",
      "type": "debugpy",
      "request": "launch",
      "module": "sam3d_body.main",
      "cwd": "${workspaceFolder}",
      "python": "/opt/conda/envs/sam_3d_body/bin/python",
      "console": "integratedTerminal",
      "args": [
        "infer.gpu=1"
      ]
    }
  ]
}