{
  "configurations": [
    {
      "name": "Python 调试程序: 模块",
      "type": "debugpy",
      "request": "launch",
      "module": "enter-your-module-name"
    },
    {
      "name": "prepare_dataset",
      "type": "debugpy",
      "request": "launch",
      "module": "prepare_dataset.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
        "device=1",
        "task=[depth, optical_flow, yolo, detectron2]",
      ]
    },
    {
      "name": "prepare_dataset_crop",
      "type": "debugpy",
      "request": "launch",
      "module": "prepare_dataset.main_crop",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
        // "task=[optical_flow,depth]",
        "task=[bbox]"
      ]
    },
    {
      "name": "pose3d",
      "type": "debugpy",
      "request": "launch",
      "module": "project.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "prepare_data_2d_custom",
      "type": "debugpy",
      "request": "launch",
      "module": "VideoPose3D.data.prepare_data_2d_custom",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": []
    },
    {
      "name": "run_custom",
      "type": "debugpy",
      "request": "launch",
      "module": "VideoPose3D.run",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
        "-d",
        // "custom",
        "/workspace/data/custom_npz.npz",
        "-k",
        "myvideos",
        "-arc",
        "3,3,3,3,3",
        "-c",
        "checkpoint",
        "--evaluate",
        "/workspace/VideoPose3D/checkpoint/pretrained_h36m_detectron_coco.bin",
        "--render",
        "--viz-subject",
        "run_3_osmo_2,run_3_osmo_1",
        "--viz-action",
        "custom",
        "--viz-camera",
        "0",
        "--viz-video",
        "/workspace/VideoPose3D/input_directory/osmo_2.mp4",
        "--viz-output",
        "/workspace/data/vis",
        "--viz-size",
        "6"
      ]
    },
    {
      "name": "camera_calibration",
      "type": "debugpy",
      "request": "launch",
      "module": "camera_calibration.calibration",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "triangulate",
      "type": "debugpy",
      "request": "launch",
      "module": "triangulation.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
